{
  "editor.fontSize": 20,
  "editor.letterSpacing": -1.0,
  "editor.fontFamily": "Brutalist Mono",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontFamily": "Jetbrains Mono",
  "window.zoomLevel": 0.5,

  "terminal.integrated.scrollback": 500,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.windowsEnableConpty": true,
  "terminal.integrated.tabs.enableAnimation": false,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.enableMultiLinePasteWarning": "always",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeLens": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.folding": true,
  "editor.fontLigatures": true,
  "editor.fontWeight": "450",
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.guides.indentation": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.hover.delay": 250,
  "editor.hover.sticky": true,
  "editor.hover.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.lightbulb.enabled": "off",
  "editor.lineNumbers": "off",
  "editor.multiCursorModifier": "alt",
  "editor.multiCursorPaste": "spread",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [],
  "editor.scrollBeyondLastLine": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.showFoldingControls": "mouseover",
  "editor.snippetSuggestions": "inline",
  "editor.suggestSelection": "first",
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.minimap.size": "fit",
  "editor.minimap.enabled": false,

  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showIcons": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.splitInGroupLayout": "horizontal",
  "workbench.editor.splitSizing": "split",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.editor.enableTabHover": false,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.settings.editor": "json",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.settings.useSplitJSON": false,
  "workbench.editor.wrapTabs": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.editor.empty.hint": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.layoutControl.enabled": false,

  // FIXED: Made scrollbars thinner and shorter
  "editor.scrollbar.verticalScrollbarSize": 3,
  "editor.scrollbar.horizontalScrollbarSize": 3,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",

  "workbench.colorCustomizations": {
    "terminal.background": "#020202",
    "terminalCursor.foreground": "#FFFFFF",
    "editor.background": "#020202",
    "tab.activeBackground": "#020202",
    "tab.inactiveBackground": "#020202",
    "tab.hoverBackground": "#020202",
    "tab.unfocusedHoverBackground": "#020202",
    "editorGroupHeader.tabsBackground": "#020202",
    "tab.border": "#020202",
    "titleBar.activeBackground": "#020202",
    "titleBar.inactiveBackground": "#020202",
    "menuBar.selectionBackground": "#FFFFFF",
    "menu.background": "#020202",
    "menu.selectionBackground": "#020202",
    "menu.foreground": "#FFFFFF",
    "sideBar.background": "#020202",
    "editorOverviewRuler.background": "#000000",
    "editorGutter.background": "#000000",
    "editorGroupHeader.border": "#000000",
    "panel.background": "#000000",
    "panel.border": "#000000",
    "panelTitle.activeForeground": "#ffffff",
    "panelTitle.inactiveForeground": "#aaaaaa",
    "panelTitle.activeBorder": "#000000",

    // FIXED: Made sidebar scrollbar darker but visible, and shorter
    "scrollbar.shadow": "#000000",
    "scrollbarSlider.background": "#0c0c0c",
    "scrollbarSlider.hoverBackground": "#0c0c0c",
    "scrollbarSlider.activeBackground": "#0c0b0b",

    // FIXED: Made outline/timeline headers black background with less white text
    "sideBarSectionHeader.background": "#020202",
    "sideBarSectionHeader.foreground": "#cccccc",
    "sideBarSectionHeader.border": "#000000",

    // FIXED: Removed hover effects completely
    "list.activeSelectionBackground": "#1a1a1a",
    "list.activeSelectionForeground": "#ffffff",
    "list.hoverBackground": "#141414",
    "list.focusBackground": "#1a1a1a",
    "list.inactiveSelectionBackground": "#141414"
  },

  "editor.tokenColorCustomizations": {
    "comments": "#96a2aa",
    "textMateRules": [
      {
        "scope": "string",
        "settings": {
          "foreground": "#D7C9AE"
        }
      }
    ]
  },

  "editor.overviewRulerBorder": false,

  "window.density.editorTabHeight": "compact",
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,

  "breadcrumbs.enabled": false,

  "security.workspace.trust.untrustedFiles": "open",

  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/target/**": true
  },

  "zenMode.centerLayout": false,
  "zenMode.hideStatusBar": true,
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": true,
  "zenMode.restore": true,
  "zenMode.silentNotifications": true,
  "zenMode.showTabs": "single",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "hidden",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "code-runner.runInTerminal": true,
  "editor.mouseWheelZoom": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "mssql.connectionGroups": [
    {
      "name": "ROOT",
      "id": "72EB899E-875F-458A-8519-431BC8F5942F"
    }
  ],
  "mssql.connections": [],
  "workbench.colorTheme": "Kanagawa Dragon"
}
